<%= nav_bar :brand => "Overseer", :brand_link => root_path do %>
  <%= menu_group do %>
      <%= menu_item "Home", root_path %>
      <%= menu_item "About Us", '#' %>
      <%= menu_item "Contact", '#' %>
  <% end %>


  <%= menu_group :pull => :right do %>
    <% if current_user %>

      <% if isSigninFromFB(current_user) %>
        <%= menu_item current_user.email, '#' %>
      <% else %>
        <%= menu_item current_user.email, edit_user_registration_path %>
      <% end %>

      <%= menu_item "Log Out", destroy_user_session_path, :method => :delete %>

    <% else %>
      <%= menu_item "Sign in with FB", user_omniauth_authorize_path(:facebook) %>
      <%= menu_item "Sign Up", new_user_registration_path %>
      <%= menu_item "Log in", new_user_session_path %>
    <% end %>
  <% end %>

<% end %>