<h1>Listing cases</h1>

<table class="table dataTable">
  <thead>
    <tr>
      <th>CaseName</th>
      <th>TargetLB</th>
      <th>DigSite</th>
      <th>CaseStart</th>
      <th>CaseEnd</th>
      <th>ConstructionUnit</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @cases.each do |eachCase| %>
      <tr>

        <td><%= eachCase.CaseName %></td>
        <td><%= eachCase.TargetLB %></td>
        <td><%= eachCase.DigSite %></td>
        <td><%= eachCase.CaseStart %></td>
        <td><%= eachCase.CaseEnd %></td>
        <td><%= eachCase.ConstructionUnit %></td>
        <td><%= link_to 'Detail', eachCase, :class => 'btn btn-default' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script type="text/javascript">
  var tableElement = $('.dataTable');
  tableElement.dataTable({
    "sPaginationType" :"bootstrap"

  });
</script>

