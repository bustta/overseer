<h1>道路挖掘資訊</h1>

<table class="table table-hover table-striped dataTable">
  <thead>
    <tr>
      <th>案件名稱</th>
      <th>挖掘地點</th>
      <th>起始日期</th>
      <th>結束日期</th>
      <th>施工單位</th>
      <th></th>

    </tr>
  </thead>

  <tbody>
    <% @cases.each do |eachCase| %>
      <tr>

        <td><%= truncate(eachCase.CaseName, :length => 30) %></td>
        <td><%= eachCase.DigSite %></td>
        <td><%= eachCase.CaseStart.to_s(:long) %></td>
        <td><%= eachCase.CaseEnd.to_s(:long) %></td>
        <td><%= eachCase.ConstructionUnit %></td>
        <td><%= link_to 'Detail', eachCase, :class => 'btn btn-default' %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<script type="text/javascript">
  var tableElement = $('.dataTable');
  tableElement.dataTable();
</script>

